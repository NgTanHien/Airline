@model Airline21.Models.Flight
@{
    Layout = "~/Views/Shared/Layoutmenu.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FormInfor</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-vB8B+K8HyEcsPPfdNzudap0zCUf0YNRxntOUKotGql8R8tNee5vJm4cMt+EqdrQgQKbixSo98i5t6qjOC6fR2Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>

        .body {
            display: flex;
            justify-content: flex-end; /* Chuyển nội dung về phía bên phải */
            align-items: center;
            height: 100vh;
            margin: 0;
        }



        .content {
            text-align: left;
            margin-right: 20px;
            background-color: #FFFFFF; /* White background */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft box shadow */
            max-width: 500px; /* Adjust the maximum width as needed */
            width: 100%; /* Ensure responsiveness */
            margin-left: auto; /* Move to the right */
            margin-right: 0; /* Reset margin-right */
        }

            .content p {
                margin: 10px 0;
                font-size: 14px;
                color: cornflowerblue;
            }

                .content p:first-child {
                    font-size: 30px;
                    font-weight: bold;
                    font-family: Helvetica;
                    text-align: center;
                    color: blue; /* Change the color as needed */
                }

                .content p:nth-child(2) {
                    font-size: 20px;
                    margin-top: 15px;
                    font-family: Helvetica;
                    margin-left: 15px;
                }

                .content p:nth-child(n+3) {
                    margin-top: 10px;
                    font-size: 20px;
                    font-family: Helvetica;
                    margin-left: 15px;
                }

                .content p:last-child {
                    font-size: 30px;
                    font-weight: bold;
                    color: #3399FF;
                    text-align: left;
                    font-family: Helvetica;
                }

        <style >


        .form-detail {
            padding-top: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }


        .form-detail .control-custom {
            font-size: 14px;
            color: #333;
            width: 100%;
        }

        .form-detail .group {
            position: relative;
            margin-bottom: 20px;
        }

            .form-detail .group::after {
                content: "";
                display: table;
                clear: both;
            }

        .form-detail input {
            display: block;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
        }

        .form-detail label {
            font-size: 14px;
            color: #555;
            position: absolute;
            pointer-events: none;
            left: 10px;
            top: 10px;
            transition: 0.2s ease all;
        }

        input:focus {
            outline: none;
        }

        .form-detail .bar {
            position: relative;
            display: block;
        }

        .bar::before,
        .bar::after {
            content: '';
            height: 2px;
            width: 0;
            bottom: 0;
            position: absolute;
            background: #2cb680;
            transition: 0.2s ease all;
        }

        .bar::before {
            left: 50%;
        }

        .bar::after {
            right: 50%;
        }

        .form-detail input:focus ~ .bar::before,
        .form-detail input:focus ~ .bar::after {
            width: 50%;
        }

        .form-detail .bar::before,
        .form-detail .bar::after {
            content: '';
            height: 2px;
            width: 0;
            bottom: 0;
            position: absolute;
            background: #2cb680;
            transition: 0.2s ease all;
        }

        .form-detail input:focus ~ .bar::before,
        .form-detail input:focus ~ .bar::after {
            width: 50%;
        }

        .form-button {
            margin-top: 20px;
        }

        .form-detail label {
            font-size: 14px;
            color: #555;
            position: absolute;
            pointer-events: none;
            left: 10px;
            top: 10px;
            transition: 0.2s ease all;
        }

        .form-detail input:focus ~ label,
        .form-detail input:valid ~ label {
            top: 0;
            color: #2cb680;
            font-size: 12px;
        }

        .flight-details {
            margin: 10px 0;
            padding: 10px;
            font-size: 14px;
            color: #555;
            background-color: #f0f8ff; /* Choose your desired background color */
            border-radius: 8px;
        }

        .detail-label {
            font-weight: bold;
            color: #3399FF; /* Green color for the "Total:" label */
            margin-right: 10px;
        }

        .total-label {
            color: #3399FF; /* Green color for the "Subtotal" label */
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div>


        @using (Html.BeginForm("FormInfor", "Order2"))
        {
            <div style="padding-left:200px;">
                <div class="container">
                    <div class="mot" style="text-align:center">
                        <div class="group" style="display:none">
                            <input class="control-custom" type="text" value="@ViewBag.FormCount" name="FormCount" />
                            <span class="bar"></span>
                            <label>so</label>
                        </div>
                        @for (int i = 1; i <= ViewBag.FormCount; i++)
                        {
                            <h1 style="text-align:left">People @i</h1>
                            <div class="clearfix">
                                <div class="form-detail">
                                    <div class="form-info col-md-6 col-xs-12">

                                        <div class="group">
                                            <input class="control-custom" type="text" name="fullname @i" />
                                            <span class="bar"></span>
                                            <label>Full name</label>
                                        </div>
                                        <div class="group">
                                            <input class="control-custom" type="date" name="birthday @i" />
                                            <span class="bar"></span>
                                            <label>birthday</label>
                                        </div>
                                        <div class="group">
                                            <input class="control-custom" type="text" name="Phone @i" />
                                            <span class="bar"></span>
                                            <label>Phone</label>
                                        </div>
                                        <div class="group">
                                            <input class="control-custom" type="text" name="Email @i" />
                                            <span class="bar"></span>
                                            <label>Email</label>
                                        </div>
                                        <div class="group">
                                            <input class="control-custom" type="text" name="CitizenIdentificationCard @i" />
                                            <span class="bar"></span>
                                            <label>CitizenIdentificationCard</label>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    @if (i == 1)
                                    {
                                        <div class="content">
                                            @Html.Action("DetailFlight1", "order2")

                                        </div>
                                        <div class="content">
                                            @Html.Action("DetailFlight2", "order2")
                                        </div>
                                    }

                                </div>
                                <div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="form-button text-center">
                <button class="btn btn-info" type="submit">Submit</button>
            </div>
        }



    </div>
</body>
</html>