@model Airline21.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layoutmenu.cshtml";
}
<style>
    .ky {
        width: 30%;
        margin: 0 auto; /* Add this line to center the form */
        padding-top: 130px;
    }
</style>
<main>
    <div class="container" style="padding-top: 100px;">
     

        <div class="ky">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "needs-validation" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "confirmPassword" })
                </div>

                <hr class="my-4">

                <button type="submit" class="btn btn-primary btn-lg">Register</button>
            }
        </div>
    </div>
</main>
