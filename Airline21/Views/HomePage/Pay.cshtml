@using Airline21.Models;
@model IEnumerable<Custommer_Ticket>
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/Layoutmenu.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fabcart</title>
    <style>
        body {
            background-color: #F6F6F6;
            margin: 0;
            padding: 0;
        }

        h1, h2, h3, h4, h5, h6 {
            margin: 0;
            padding: 0;
        }

        p {
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin-right: auto;
            margin-left: auto;
        }

        .brand-section {
            background-color: #0d1033;
            padding: 10px 40px;
        }

        .logo {
            width: 50%;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-6 {
            width: 50%;
            flex: 0 0 auto;
        }

        .text-white {
            color: #fff;
        }

        .company-details {
            float: right;
            text-align: right;
        }

        .body-section {
            padding: 16px;
            border: 1px solid gray;
        }

        .heading {
            font-size: 20px;
            margin-bottom: 08px;
        }

        .sub-heading {
            color: #262626;
            margin-bottom: 05px;
        }

        table {
            background-color: #fff;
            width: 100%;
            border-collapse: collapse;
        }

            table thead tr {
                border: 1px solid #111;
                background-color: #f2f2f2;
            }

            table td {
                vertical-align: middle !important;
                text-align: center;
            }

            table th, table td {
                padding-top: 08px;
                padding-bottom: 08px;
            }

        .table-bordered {
            box-shadow: 0px 0px 5px 0.5px gray;
        }

            .table-bordered td, .table-bordered th {
                border: 1px solid #dee2e6;
            }

        .text-right {
            text-align: end;
        }

        .w-20 {
            width: 20%;
        }

        .float-right {
            float: right;
        }
    </style>

    <script>
    // Lấy ngày thực tế
    var currentDate = new Date();

    // Lấy ngày, tháng, năm
    var day = currentDate.getDate();
    var month = currentDate.getMonth() + 1; // Lưu ý rằng tháng trong JavaScript bắt đầu từ 0, nên cần cộng thêm 1.
    var year = currentDate.getFullYear();

    // Định dạng ngày, tháng, năm thành chuỗi
    var formattedDate = day + '-' + month + '-' + year;

    // Cập nhật nội dung của phần tử HTML
    document.getElementById("order-date").textContent = "Order Date: " + formattedDate;
    </script>
</head>
<body>
    <div style="padding-top:150px">

        @foreach (var item in Model)
        {
            <div class="container">
                <div class="brand-section">
                    <div class="row">
                        <div class="col-6">
                            <h1 class="text-white">HK AIRLINE</h1>
                        </div>
                        <div class="col-6">
                            <div class="company-details">
                                <p class="text-white">NGUYEN GIA KY</p>
                                <p class="text-white">NGUYEN TAN HIEN</p>
                                <p class="text-white">+84 0948292397</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="body-section">
                    <div class="row">
                        <div class="col-6">
                            <h2 class="heading">Invoice No.: 001</h2>
                            <p class="sub-heading">Tracking No. fabcart2025 </p>
                            <p class="sub-heading" id="order-date">Order Date:</p>
                            <p class="sub-heading">Email Address: @item.UserCustomer_Ticket.EmailCustomer </p>
                        </div>
                        <div class="col-6">
                            <p class="sub-heading">Full Name:@item.UserCustomer_Ticket.Name  </p>
                            <p class="sub-heading">Birthday: @item.UserCustomer_Ticket.birthday  </p>
                            <p class="sub-heading">CitizenIdentificationCard: @item.UserCustomer_Ticket.CitizenIdentificationCard </p>
                            <p class="sub-heading">Phone Number: @item.UserCustomer_Ticket.PhoneCustomer </p>

                        </div>
                    </div>
                </div>

                <div class="body-section">
                    <h3 class="heading">Ordered Items</h3>
                    <br>
                    <table class="table-bordered">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th class="w-20">Price</th>
                                <th class="w-20">Quantity</th>
                                <th class="w-20">Grandtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Product Name:@item.Ticket.NameTicket</td>
                                <td>@item.Ticket.price</td>
                                <td>1</td>
                                <td>@item.Ticket.price</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-right">Sub Total</td>
                                <td> @item.Ticket.price</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-right">Tax Total </td>
                                <td>0</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-right">Grand Total</td>
                                <td> @item.Ticket.price</td>
                            </tr>
                        </tbody>
                    </table>
                    <br>
                    <h3 class="heading">Payment Paypal:<<a href="/Homepage/PaymentWithPayPal">Payment by PayPal</a></h3>
                </div>


            </div>
        }
    </div>

</body>
</html>


